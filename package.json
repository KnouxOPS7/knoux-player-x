{
    "name": "knoux-player-x",
    "version": "1.0.0",
    "description": "KNOUX Player X™ - The Cinematic Intelligence Media System",
    "main": ".webpack/main/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts,.tsx .",
        "format": "prettier --write .",
        "test": "jest",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": {
        "name": "Sadek Elgazar (KNOUX)",
        "email": "info@knoux.tech",
        "url": "https://github.com/knuux7-ctrl/KNOX-Player-X-"
    },
    "license": "Proprietary",
    "devDependencies": {
        "@electron-forge/cli": "^7.2.0",
        "@electron-forge/maker-squirrel": "^7.2.0",
        "@electron-forge/maker-zip": "^7.2.0",
        "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
        "@electron-forge/plugin-webpack": "^7.2.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vercel/webpack-asset-relocator-loader": "^1.10.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.11.0",
        "electron": "28.0.0",
        "electron-builder": "^24.9.0",
        "eslint": "^8.0.0",
        "eslint-plugin-import": "^2.25.0",
        "fork-ts-checker-webpack-plugin": "^7.3.0",
        "jest": "^29.0.0",
        "node-loader": "^2.0.0",
        "prettier": "^3.0.0",
        "sass": "^1.97.2",
        "sass-loader": "^13.3.3",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.0.0",
        "typescript": "^5.0.0",
        "webpack": "^5.104.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.0.0",
        "clsx": "^2.0.0",
        "electron-updater": "6.1.8",
        "electron-squirrel-startup": "^1.0.0",
        "framer-motion": "^10.16.0",
        "music-metadata": "8.1.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.0.0"
    },
    "build": {
        "appId": "com.knoux.playerx",
        "productName": "KNOUX Player X",
        "copyright": "Copyright © 2026 KNOUX7-Core",
        "directories": {
            "output": "release"
        },
        "win": {
            "icon": "desktop/resources/icons/app-icon.ico",
            "target": [
                "nsis",
                "zip"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "include": "desktop/resources/installer/installer.nsh",
            "script": "desktop/resources/installer/install-script.nsi"
        }
    }
}
